<div class="w-full">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold">Dashboard</h1>
  </div>
  
  <!-- Welcome Section -->
  <div class="bg-white rounded-lg shadow p-6 mb-8">
    <h2 class="text-2xl font-semibold text-gray-900 mb-4">Welcome, <%= current_user.email %>!</h2>
    <p class="text-gray-600">This is your dashboard. More features coming soon.</p>
  </div>

  <!-- Documents Section -->
  <div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold">My Documents</h1>
      <div class="flex gap-2">
        <%= link_to 'Upload Document', new_document_path, class: 'px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700' %>
        <%= link_to 'View All', documents_path, class: 'px-6 py-2 bg-slate-600 text-white rounded-lg hover:bg-slate-700' %>
      </div>
    </div>

    <% if current_user.documents.any? %>
      <div class="overflow-x-auto bg-white rounded-lg shadow">
        <table class="w-full">
          <thead class="bg-gray-100 border-b">
            <tr>
              <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">Title</th>
              <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">Uploaded</th>
              <th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% current_user.documents.order(created_at: :desc).each do |document| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 text-sm text-gray-900"><%= document.title %></td>
                <td class="px-6 py-4 text-sm text-gray-600">
                  <%= time_ago_in_words(document.created_at) %> ago
                </td>
                <td class="px-6 py-4 text-sm space-x-2">
                  <%= link_to 'View', document_path(document), class: 'text-blue-600 hover:text-blue-800' %>
                  <%= link_to 'Download', download_document_path(document), class: 'text-green-600 hover:text-green-800' %>
                  <%= form_with(model: document, method: :delete, local: true) do |form| %>
                  <%= form.submit 'Delete', 
                      onclick: "openDeleteModal(event, this.closest('form'))",
                      class: 'text-red-600 hover:text-red-800 bg-transparent border-0 cursor-pointer' %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="bg-gray-100 rounded-lg p-8 text-center shadow">
        <p class="text-gray-600 text-lg mb-4">No documents yet.</p>
        <%= link_to 'Upload your first document', new_document_path, class: 'text-blue-600 hover:text-blue-800 font-semibold' %>
      </div>
    <% end %>
  </div>
</div>