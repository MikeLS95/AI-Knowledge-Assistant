<div class="min-h-screen flex items-center justify-center px-4">
  <div class="w-full max-w-md">
    <!-- Header -->
    <div class="text-center mb-12 bg-slate-800 rounded-xl shadow-2xl p-8 border border-slate-700">
      <div class="mb-6 flex justify-center">
        <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center">
          <span class="text-3xl">ðŸ¤–</span>
        </div>
      </div>
      <h1 class="text-4xl font-bold text-white mb-3">
        Sign In
      </h1>
      <p class="text-lg text-slate-300">
        Welcome back to AI Knowledge Assistant
      </p>
    </div>

    <!-- Card -->
    <div class="bg-slate-800 rounded-xl shadow-2xl p-8 border border-slate-700">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <!-- Email Field -->
        <div class="mb-6">
          <%= f.label :email, class: 'block text-sm font-semibold text-slate-200 mb-2' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition' %>
        </div>

        <!-- Password Field -->
        <div class="mb-6">
          <%= f.label :password, class: 'block text-sm font-semibold text-slate-200 mb-2' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition' %>
        </div>

        <!-- Remember Me Checkbox -->
        <% if devise_mapping.rememberable? %>
          <div class="mb-8 flex items-center">
            <%= f.check_box :remember_me, class: 'w-4 h-4 bg-slate-700 border-slate-600 rounded focus:ring-2 focus:ring-blue-500 cursor-pointer' %>
            <%= f.label :remember_me, class: 'ml-2 text-sm text-slate-300 cursor-pointer' %>
          </div>
        <% end %>

        <!-- Submit Button -->
        <div class="mb-6">
          <%= f.submit "Sign In", class: 'w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-200 ease-in-out transform hover:scale-105' %>
        </div>
      <% end %>

      <!-- Divider -->
      <div class="relative mb-6">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-slate-600"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-slate-800 text-slate-400">Don't have an account?</span>
        </div>
      </div>

      <!-- Sign Up Link -->
      <div class="text-center">
        <%= link_to 'Create Account', new_user_registration_path, class: 'inline-block w-full bg-slate-700 hover:bg-slate-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-200' %>
      </div>
    </div>

    <!-- Footer -->
    <div class="mt-8 text-center text-slate-500 text-sm">
      <p>Â© 2025 AI Knowledge Assistant. All rights reserved.</p>
    </div>
  </div>
</div>
