<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold mb-6">Upload Document</h1>

    <% if @document.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <h2 class="font-bold"><%= pluralize(@document.errors.count, 'error') %> occurred:</h2>
        <ul class="list-disc list-inside">
          <% @document.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with(model: @document, local: true) do |form| %>
      <div class="mb-6">
        <%= form.label :title, class: 'block text-sm font-medium text-gray-700 mb-2' %>
        <%= form.text_field :title, 
            placeholder: 'Enter document title',
            class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500' %>
      </div>

      <div class="mb-6">
        <%= form.label :file, class: 'block text-sm font-medium text-gray-700 mb-2' %>
        <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center">
          <%= form.file_field :file, 
              accept: '.pdf,.txt,.docx',
              class: 'w-full' %>
          <p class="text-sm text-gray-500 mt-2">Accepted formats: PDF, TXT, DOCX</p>
        </div>
      </div>

      <div class="flex gap-4">
        <%= form.submit 'Upload', class: 'px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700' %>
        <%= link_to 'Cancel', documents_path, class: 'px-6 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300' %>
      </div>
    <% end %>
  </div>
</div>